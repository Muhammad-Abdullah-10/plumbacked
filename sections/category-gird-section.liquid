{% if section.settings.collectionoone.featured_image %}
    {% assign collectiononeiimg = section.settings.collectionoone |  file_img_url %}
{% endif %}
    
<style>
    .double-img{
        background: url({{ collectiononeiimg }});
    }
</style>

    <!-- gird category -->
    <div class="grid-images-wrapper position-relative max-1320 mx-auto my-5">
      <div class="text-vertical position-absolute"></div>
      <div class="grid-images">
        <div class="double-img position-relative">
          <div class="position-absolute">
            <span class="left">{{ section.settings.collectionoone.title }}</span>
            <span class="right">{{ section.settings.collectionoone.products_count }}</span>
          </div>
          <img src="{{ section.settings.collectionoone.featured_image |  image_url  }}" alt="" />
        </div>
        <div class="sub">
          <div>
            <img src="{{ section.settings.collectionotwo.featured_image |  image_url  }}" alt="" class="sub-img" />
          </div>
          <div class="wrapper-img-sub-grid position-relative">
            {% assign on_sale = false %}

            {% for product in section.settings.collectionothree.products %}
            {% if product.compare_at_price > product.price %}
                {% assign on_sale = true %}
                {% break %}
            {% endif %}
            {% endfor %}
            {% if on_sale %}
                <span class="position-absolute">Sale</span>
                {% else %}
                        
            {% endif %}
            
            <img src="{{ section.settings.collectionothree.featured_image |  image_url  }}" alt="" class="sub-img" />
          </div>
          <div>
            <img src="{{ section.settings.collectionofour.featured_image |  image_url  }}" alt="" class="sub-img" />
          </div>
          <div>
            <img src="{{ section.settings.collectionofive.featured_image |  image_url  }}" alt="" class="sub-img" />
          </div>
        </div>
      </div>
    </div>
    <!-- gird category -->


    {% schema %}
        {   
            "name" : "Collection Grid" ,
            "settings": [
                {
                    
                    "type": "collection",
                    "id": "collectionoone",
                    "label": "Add Collection"
                    },
                    {
                    "type": "collection",
                    "id": "collectionotwo",
                    "label": "Add Collection"
                    },
                    {
                    "type": "collection",
                    "id": "collectionothree",
                    "label": "Add Collection"
                    },
                    {
                    "type": "collection",
                    "id": "collectionofour",
                    "label": "Add Collection"
                    },
                    {
                    "type": "collection",
                    "id": "collectionofive",
                    "label": "Add Collection"
                    }

            ],
            "presets": [
                {
                    "name" : "Collection Grid" ,                    
                }
            ]
        }
    {% endschema %}