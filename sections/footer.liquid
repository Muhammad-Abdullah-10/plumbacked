
<footer class="footer-wrapper my-5">
    <div class="container-xxl">
        <div class="row max-1320">
            <div class="col-40 col-md-6 col-sm-12">
                <div class="wrapper-first-col-footer">
                    <div class="wrapper-logo-footer">
                        <img src="{{ section.settings.footer-logo |  image_url: width : "200"  }}" alt="">
                    </div>
                    <div class="wrapper-footer-desc">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing
                            elit, sed do eiusmod tempor incididunt ut labore et
                            dolore magna aliqua
                        </p>
                    </div>
                    <div class="wrapper-social-links">
                        {% if section.settings.facebookShow %}
                            <a href="{{ section.settings.facebookfooter }}" class="facebook-footer">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>    
                        {% endif %}
                        {% if section.settings.twitterShow %}
                            <a href="{{ section.settings.twitterfooter }}" class="facebook-footer">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>    
                        {% endif %}
                        {% if section.settings.linkedinkShow %}
                            <a href="{{ section.settings.linkedinfooter }}" class="facebook-footer">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                        {% endif %}
                        {% if section.settings.instagramShow %}
                            <a href="{{ section.settings.instagramfooter }}" class="facebook-footer">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-20 col-md-6 col-sm-12">
                {% assign footer_menu_handle = section.settings.footer-menu-one %}
                {% if  linklists[footer_menu_handle]  %}
                    <div class="footer-heading"> {{ section.settings.footer-menu-one.title }} </div>
                    <ul class="footer-ul">
                        {% for footermenu in linklists[footer_menu_handle].links %}
                        <li class="footer-li"><a href="{{ footermenu.url  }}" class="footer-a">{{  footermenu.title }}</a></li>
                    {% endfor %}
                        {% comment %} <li class="footer-li"><a href="#" class="footer-a">hoodies</a></li>
                        <li class="footer-li"><a href="#" class="footer-a">hoodies</a></li>
                        <li class="footer-li"><a href="#" class="footer-a">hoodies</a></li>
                        <li class="footer-li"><a href="#" class="footer-a">hoodies</a></li> {% endcomment %}
                    </ul>    
                {% endif %}
                
                
            </div>
            <div class="col-20 col-md-6 col-sm-12">
                {% assign footer_menu_handle_two = section.settings.footer-menu-two %}
                {% if  linklists[footer_menu_handle_two]  %}
                <div class="footer-heading"> {{ section.settings.footer-menu-two.title }} </div>
                <ul class="footer-ul">
                    {% for footermenu in linklists[footer_menu_handle_two].links %}
                        <li class="footer-li"><a href="{{ footermenu.url  }}" class="footer-a">{{  footermenu.title }}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
            <div class="col-20 col-md-6 col-sm-12">
                {% assign footer_menu_handle_three = section.settings.footer-menu-three %}
                {% if  linklists[footer_menu_handle_three]  %}
                <div class="footer-heading">{{ section.settings.footer-menu-three.title }} </div>
                <ul class="footer-ul">
                    {% for footermenu in linklists[footer_menu_handle_three].links %}
                        <li class="footer-li"><a href="{{ footermenu.url  }}" class="footer-a">{{  footermenu.title }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
            </div>
        </div>
    </div>
</footer>


{% schema %}
    {   
        "name": "footer",
        "settings": [
            {
                "type" : "image_picker",
                "id" : "footer-logo",
                "label": "Footer Logo"
            }
            ,{
            "type": "link_list",
            "id": "footer-menu-one",
            "label": "Footer Menu 1",
            "default": "main-menu"
            },
            {
            "type": "link_list",
            "id": "footer-menu-two",
            "label": "Footer Menu 2",
            "default": "main-menu"
            },
            {
            "type": "link_list",
            "id": "footer-menu-three",
            "label": "Footer Menu 3",
            "default": "main-menu"
            },
            {
                "type": "checkbox",
                "id" : "facebookShow",
                "label": "Show Facebook Link",
                "default" : true
            },
           
            {
                "type": "url",
                "id": "facebookfooter",
                "label": "Facebook Link"
            },
            {
                "type": "checkbox",
                "id" : "twitterShow",
                "label": "Show Twitter Link",
                "default" : true
            },
            {
                "type": "url",
                "id": "twitterfooter",
                "label": "Twitter Link"
            },
            {
                "type": "checkbox",
                "id" : "linkedinkShow",
                "label": "Show Linkedin Link",
                "default" : true
            },
            {
                "type": "url",
                "id": "linkedinfooter",
                "label": "Linkedin Link"
            },
            
            {
                "type": "checkbox",
                "id" : "instagramShow",
                "label": "Show Instagram Link",
                "default" : true
            },
            {
                "type": "url",
                "id": "instagramfooter",
                "label": "Instagram Link"
            }
        
          
        ]
    }
{% endschema %}